<div class="new-match">

  <% if @game %>
    <%= render partial: "game_select" %>

    <%= form_with model: @match, class: "form" do |f| %>
      <%= f.hidden_field(:game_id, value: @game.id) %>
      <div class="basics">
        <div>
          <%= label_tag(:match_slots) do %>
            Slots
          <% end %>
          <%=
            f.number_field :slots,
              value: @game.defaults["slots"],
              placeholder: @game.defaults["slots"],
              in: 2..@game.defaults["max"], step: 1
          %>
        </div>

        <div>
          <%= label_tag(:match_start_time) do %>
            Start time (Eastern)
          <% end %>
          <%= f.time_field :start_time, placeholder: "7:15" %>
        </div>

        <div>
          <%= label_tag(:match_duration) do %>
            Duration (mins)
          <% end %>
          <%= f.number_field :duration, in: 15..3600 %>
        </div>
      </div>

      <%= label_tag(:match_description) do %>
        Describe
      <% end %>
      <%= f.text_area :description, size: "60x5" %>

      <%= f.submit "Create Match" %>

    <% end %>
  <% else %>
    <%= render partial: "game_select" %>
  <% end %>
</div>
